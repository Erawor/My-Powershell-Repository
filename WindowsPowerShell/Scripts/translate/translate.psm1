#requires -version 4
function Install-APIkey {
  <#
    .SYNOPSIS
        Installs Yandex.Translation API-key.
    .NOTES
        Author: greg zakharov
  #>
  param(
    [Parameter(Mandatory=$true)]
    [ValidateNotNullOrEmpty()]
    [String]$Key
  )

  Add-Type -AssemblyName System.Security

  [IO.File]::WriteAllBytes(
    ($bin = "$([Environment]::GetFolderPath('UserProfile'))\ytrans.bin"),
    [Security.Cryptography.ProtectedData]::Protect(
      [Text.Encoding]::Unicode.GetBytes($Key),
      $null,
      [Security.Cryptography.DataProtectionScope]::CurrentUser
    )
  )

  # set hidden attribute
  $itm = Get-Item $bin
  $itm.Attributes = $itm.Attributes -bxor 2
}

function Get-Translation {
  <#
    .SYNOPSIS
        Translates specified text file or string via Yandex.Translation API.
    .NOTES
        Author: greg zakharov
  #>
  param(
    [Parameter(Mandatory=$true, Position=0)]
    [ValidateNotNullOrEmpty()]
    [String]$InputData,

    [Parameter(Position=1)]
    [String]$UserAgent
  )

  begin {
    Add-Type -AssemblyName System.Security
    # decode key
    if (Test-Path($key = "$([Environment]::GetFolderPath('UserProfile'))\ytrans.bin")) {
      $key = [Text.Encoding]::Unicode.GetString(
        [Security.Cryptography.ProtectedData]::Unprotect(
          [IO.File]::ReadAllBytes($key),
          $null,
          [Security.Cryptography.DataProtectionScope]::CurrentUser
        )
      )
    }
    else { throw 'API-key of Yandex.Translate has not been found.' }
    # request root
    $url = 'https://translate.yandex.net/api/v1.5/tr/'
    # original text culture
    $det = "$($url)detect?key=$key&text="
    # translation
    $trs = "$($url)translate?key=$key&text=%t&lang=%l-$(
      (Get-Culture).TwoLetterISOLanguageName
    )&format=plain"
  }
  process {
    # if data is a text file
    $InputData = if (Test-Path $InputData) { gc $InputData } else { $InputData }
    # request parameters
    $par = @{
      Uri = "$det$InputData"
      DisableKeepAlive = $true
      UseBasicParsing = $true
    }

    if (![String]::IsNullOrEmpty($UserAgent)) {
      $par['UserAgent'] = $UserAgent
    }

    if (($res = ([xml](wget @par).Content).DetectedLang).code -ne 200) {
      throw 'Could not detect language of original text.'
    }

    $trs = $trs -replace '%t', $InputData
    $trs = $trs -replace '%l', $res.lang
    $par['Uri'] = $trs
    if (($res = ([xml](wget @par).Content).Translation).code -ne 200) {
      throw 'Could not translate text.'
    }
    $res.text
  }
  end{}
}

